# ========================
# Environment Configuration
# ========================
# Copy this file to .env and fill in your values

# Spring Profile (dev, prod)
SPRING_PROFILES_ACTIVE=dev

# ========================
# Database Configuration
# ========================
POSTGRES_DB=tetgift_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=12345

# ========================
# Redis Configuration
# ========================
REDIS_HOST=localhost
REDIS_PORT=6379

# ========================
# Mail Configuration
# ========================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-email@gmail.com

# ========================
# OAuth2 - Google
# ========================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ========================
# OAuth2 - GitHub
# ========================
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ========================
# Keycloak Configuration
# ========================
# Keycloak Admin
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123

# Keycloak Database
KEYCLOAK_DB=keycloak
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=keycloak123

# Keycloak OAuth2 Client (create in Keycloak Admin Console)
KEYCLOAK_CLIENT_ID=tetgift-api
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret
KEYCLOAK_ISSUER_URI=http://localhost:8180/realms/tetgift

# ========================
# Cloudinary Configuration
# ========================
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ========================
# VNPay Configuration
# ========================
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_SECRET_KEY=your-vnpay-secret-key
VNPAY_PAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_API_URL=https://sandbox.vnpayment.vn/merchant_webapi/api/transaction
VNPAY_RETURN_URL=http://localhost:8081/api/v1/payment/vnpay-return
VNPAY_IPN_URL=http://localhost:8081/api/v1/payment/vnpay-ipn

# ========================
# JWT Configuration
# ========================
JWT_SECRET=your-jwt-secret-key-min-256-bits-long
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-min-256-bits
JWT_RESET_PASSWORD_SECRET=your-jwt-reset-password-secret-key
JWT_TIME_OUT=3600000
REFRESH_TOKEN_EXPIRATION_DAYS=7

# ========================
# PgAdmin Configuration (Optional)
# ========================
PGADMIN_EMAIL=admin@tetgift.com
PGADMIN_PASSWORD=admin123

